---
import { Icon } from "astro-icon";
interface Props {
  icon: string;
  body: string;
  number: number;
}

const { icon, body, number } = Astro.props;
---

<div class="contenedor">
  <div class="number">{number}</div>
  <div class="icon"><Icon name={icon} /></div>
  <p class="body">{body}</p>
</div>

<style lang="scss">
  @use "../../assets/scss/base/_breakpoint.scss" as *;

  .contenedor {
    display: flex;
    position: relative;
    flex-direction: column;
    width: 259px;
    height: 150px;
    background-color: var(--services-card-background);
  }

  .number {
    position: absolute;
    top: -10px;
    left: 16px;
    background-color: var(--color-emerald);
    color: var(--color-white);
    width: 30px;
    height: 30px;
  }

  .contenedor [astro-icon] {
    width: 1rem;
    color: var(--action-color);
  }
</style>
