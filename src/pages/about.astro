<style lang="scss">
  @use "../assets/scss/base/_breakpoint.scss" as *;

  .container {
    display: flex;
    flex-direction: column;
    align-items: center;
    > .page-title {
      display: flex;
      width: 90%;
      margin: 40px 0px;
      > .about-title {
        font-size: 3.6rem;
        font-weight: 700;

        @include breakpoint(md) {
          font-size: 4.8rem;
        }

        @include breakpoint(lg) {
          font-size: 5.6rem;
        }

        @include breakpoint(xl) {
          font-size: 6.4rem;
        }
      }
    }
    p {
      font-weight: 300;
      line-height: 1.6;
    }

    .about-description-container,
    img,
    .page-title {
      max-width: 1350px;
    }

    > .about-description {
      display: flex;
      width: 100%;
      height: auto;
      align-items: center;
      justify-content: center;
      flex-wrap: nowrap;
      flex-direction: column;
      margin: 40px 0px;

      > .about-description-container {
        display: flex;
        flex-direction: column;
        width: 90%;
        max-width: 1350px;
        gap: 50px;
        @include breakpoint(md) {
          flex-direction: row;
        }

        > .experience {
          display: flex;
          flex-direction: column;
          gap: 20px;
          align-items: center;
          // text-wrap: balance;
          > .iconXP {
            > [astro-icon] {
              color: var(--action-color);
              width: 50px;
              height: 50px;
              background-color: var(--color-rich-black);
              padding: 10px;
              border-radius: 100%;
              @include breakpoint(md) {
                padding: 20px;
                width: 80px;
                height: 80px;
              }
            }
          }

          > .experience-text {
            > .xp {
              color: var(--emphasis-color);
            }
          }
        }
      }
    }

    .desktop-image {
      display: none;
      margin: 40px 0px;
      > img {
        width: 100%;
        
        height: auto;
        @include breakpoint(1350px) {
          border-radius: var(--radius-default);
          max-width: 1215px;
        }
      }
      @include breakpoint(md) {
        display: block;
      }
    }

    .mobile-image {
      display: block;
      width: 100%;
      margin: 40px 0px;
      display: flex;
      justify-content: center;
      > img {
        width: 80%;
        max-width: 430px;
        height: auto;
      }

      @include breakpoint(md) {
        display: none;
      }
    }

    > .cards-container {
      display: flex;
      flex-direction: column;
      align-items: center;
      width: 100%;
      margin: 40px 0px;
      > .cards {
        display: grid;
        align-items: start;
        justify-items: center;
        gap: 20px;
        width: 90%;
        max-width: 1350px;
        grid-template-columns: repeat(1, 1fr);
        @include breakpoint(md) {
          grid-template-columns: repeat(2, auto);
          grid-template-rows: repeat(2, auto);
          > .mission-card {
            grid-area: 1 / 1 / 2 / 2;
          }
          > .vision-card {
            grid-area: 2 / 1 / 3 / 2;
          }
          > .values-card {
            height: 100%;
            grid-area: 1 / 2 / 3 / 3;
          }
        }

        > .card-item {
          display: flex;
          flex-direction: column;
          gap: 20px;
          background-color: var(--card-background-color);
          padding: 40px 20px;
          border-radius: var(--radius-default);
        }
        .card-title {
        }
        .card-description {
          > .span {
          }
        }
      }
    }
  }
</style>
