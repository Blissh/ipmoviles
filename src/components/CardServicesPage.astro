---
import Icon from "astro-icon";

interface Props {
  text: string;
  icon: string;
}

const { text, icon } = Astro.props;
---

<div class="card-container">
  <div class="service-icon">
    <Icon name={icon} />
  </div>
  <div class="service-content">
    <p class="service-text">{text}</p>
  </div>
</div>

<style lang="scss">
  @use "../assets/scss/base/_breakpoint.scss" as *;

  .card-container {
    // min-width: 200px;
    // width: 200px;
    max-width: 430px;
    min-height: 200px;
    display: flex;
    flex-basis: 30%;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    gap: 20px;
    border-radius: var(--radius-default);
    padding: 20px 20px;
    background-color: var(--card-background-color);

    .service-content {
      display: flex;
      justify-content: center;
      gap: 10px;
      border-radius: var(--radius-default);
      flex-direction: column;
      text-wrap: balance;
      color: var(--color-mint-cream);
      max-width: 350px;

      .service-text {
        font-size: 1.2rem;
        line-height: 130%;
      }

      @include breakpoint(sm) {
        .service-text {
          font-size: 1.6rem;
        }
      }

      @include breakpoint(lg) {
        .service-text {
          font-size: 1.8rem;
        }
      }

      @include breakpoint(lg) {
        .service-text {
          font-size: 1.8rem;
        }
      }
    }

    .service-icon {
      display: flex;
      justify-content: center;
      align-items: center;
      width: 54px;
      height: 54px;
      border-radius: 50%;
      border: 1px solid #c3c3c3;
      background-color: var(--card-icon-color);

      > svg {
      }
    }
  }

  [astro-icon] {
    width: 28px;
    height: 28px;
    color: var(--color-chinese-black);
  }
</style>
