<style lang="scss">
  .responsive-toggle {
    display: none;
    padding: 0;
    border: none;
    background-color: inherit;

    svg {
      width: 30px;

      path {
        transition: fill 0.2s ease-in-out;
      }
    }

    &svg:hover {
      fill: var(--action-color-state);
    }
  }
</style>
