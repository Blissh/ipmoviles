---
import Icon from "astro-icon";
import { t } from "i18next";
import { localizePath } from "astro-i18next";
---

<section class="section-contact">
  <div class="section-container">
    <div class="content">
      <h2 class="section-title">{t("footer.together")}</h2>
      <a href={localizePath("/contact")} class="hyperlink"
        >{t("footer.contactus")} <span><Icon name="bi:send-fill" /></span></a
      >
    </div>
  </div>
</section>

<style lang="scss">
  @use "../../assets/scss/base/_breakpoint.scss" as *;
  .section-contact {
    width: 100%;
    background: var(--contact-section-background);
    color: var(--color-rich-black);
    margin-top: 40px;
    > .section-container {
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 30px 0px;
      > .content {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 20px;
        text-align: center;
        > .section-title {
          color: var(--color-mint-cream);
        }
        > .hyperlink {
          display: flex;
          width: 150px;
          padding: 10px;
          align-items: center;
          text-decoration: none;
          justify-content: center;
          color: var(--color-mint-cream);
          border: 2px solid var(--color-mint-cream);
          border-radius: var(--radius-default);
          font-size: 1.4rem;

          @include breakpoint(md) {
            font-size: 1.6rem;
          }

          &:hover {
            background: var(--color-mint-cream);
            color: var(--color-rich-black);
          }

          [astro-icon] {
            margin-left: 20px;
            width: 20px;
          }
        }
      }
    }
  }
</style>
