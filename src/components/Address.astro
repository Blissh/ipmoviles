---
interface Props {
  title: string;
  body: string;
}

const { title, body } = Astro.props;
---

<div>
  <h1>{title}</h1>
  <p>{body}</p>
</div>

<style>
  h1 {
    color: var(--color-emerald);
    font-size: 10px;
    margin-bottom:5px;
  }
  p {
    font-size: 10px;
  }
  @media screen and (min-width: 768px) {
 p,h1{
    font-size:20px;
 }
  }
</style>
