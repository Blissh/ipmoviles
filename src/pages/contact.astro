  <style lang="scss">
    @use "../assets/scss/base/_breakpoint.scss" as *;

    .contenedor {
      box-sizing: border-box;
      padding: 30px 65px;
      display: flex;
      flex-direction: column;
      gap: 25px;

      @include breakpoint(md) {
        width: 80%;
        padding: 30px 0;
        align-items: flex-start;
      }
    }

    h1 {
      font-size: 24px;
      font-style: normal;
      font-weight: 600;
      @include breakpoint(md) {
        font-size: 40px;
      }
    }

    .intro {
      font-size: 16px;
      font-style: normal;
      font-weight: 500;
      @include breakpoint(md) {
        font-size: 24px;
      }
    }

    .form-contact {
      display: flex;
      flex-direction: column;
      width: 100%;
      @include breakpoint(md) {
        flex-direction: row;
        gap: 20px;
      }
    }

    form {
      display: grid;
      grid-template-columns: 1fr;
      gap: 20px;
      @include breakpoint(md) {
        grid-template-columns: 1fr 1fr;
        background-color: var(--color-dark-jungle-green);
        height: auto;
        box-sizing: border-box;
        padding: 30px 60px;
      }
    }

    form h2 {
      display: none;
      @include breakpoint(md) {
        display: flex;
        grid-column: 1 / 3;
        grid-row: 1;
        color: var(--action-color);
        font-size: 20px;
        font-style: normal;
        font-weight: 600;
      }
    }

    .message {
      display: none;
      @include breakpoint(md) {
        display: flex;
        font-size: 16px;
        margin-top: 50px;
      }
    }

    form div {
      display: flex;
      flex-direction: column;
      gap: 3px;

      @include breakpoint(md) {
        align-items: flex-end;
      }
    }

    label {
      margin-top: 20px;
      font-size: 20px;
      font-style: normal;
      font-weight: 500;
      width: 100%;
    }

    input {
      height: 40px;
      padding: 16px 10px;
      font-size: 16px;
      font-style: normal;
      font-weight: 400;
      color: black;
      width: 100%;
    }

    textarea {
      padding: 16px 10px;
      font-size: 16px;
      font-style: normal;
      font-weight: 400;
      color: black;
      resize: none;
    }

    button {
      background-color: #0a77c7;
      color: white;
      font-size: 16px;
      font-style: normal;
      border-radius: 5px;
      width: 60%;
      margin: 19px auto;
      border: none;
      box-sizing: border-box;
      padding: 12px;
      cursor: pointer;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 10px;

      @include breakpoint(md) {
        margin: 35px 0;
        background-color: var(--action-color);
        box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
      }
    }

    .contact-info {
      display: flex;
      flex-direction: column;
      gap: 20px;
      background-color: var(--card-background-color);
      box-sizing: border-box;
      padding: 30px;
      border-radius: 5px;
      @include breakpoint(md) {
        width: auto;
        height: auto;
      }
    }

    .contact-info h2 {
      font-size: 20px;
      font-style: normal;
      font-weight: 600;
    }

    .phone {
      display: flex;
      flex-direction: column;
      gap: 3px;
      font-size: 16px;
      font-style: normal;
      font-weight: 500;
    }

    .phone p {
      display: flex;
      font-size: 16px;
      font-style: normal;
      font-weight: 500;
    }

    .phone h3 {
      margin-bottom: 4px;
      font-size: 16px;
      font-style: normal;
      font-weight: 700;
    }

    .redes span {
      margin-top: 12px;
      display: flex;
      gap: 15px;
    }

    .desktop {
      display: none;
      box-sizing: border-box;
      margin-top: 30px;
      @include breakpoint(md) {
        margin-top: 0;
        display: flex;
        text-align: center;
        color: var(--action-color);
      }
    }

    .mobile {
      display: flex;
      box-sizing: border-box;
      padding: 14px 0;
      text-align: left;
      margin-top: 30px;
      @include breakpoint(md) {
        display: none;
      }
    }

    iframe {
      width: 100%;
      @include breakpoint(md) {
        width: 510px;
        height: 300px;
      }
    }

    .mapa {
      @include breakpoint(md) {
        display: flex;
        flex-direction: column;
        gap: 20px;
        margin-top: 80px;
        width: 100%;
      }
    }

    .mapa .title {
      display: none;
      @include breakpoint(md) {
        display: flex;
      }
    }

    .mapa div {
      @include breakpoint(md) {
        display: grid;
        grid-template-columns: 1fr 1fr;
        justify-items: center;
        grid-gap: 20px;
      }
    }

    .mapa span {
      @include breakpoint(md) {
        display: flex;
        flex-direction: column;
        font-size: 20px;
        align-items: center;
        gap: 20px;
      }
    }

    .mapa span p {
      @include breakpoint(md) {
        font-size: 20px;
      }
    }
  </style>
</Layout>
