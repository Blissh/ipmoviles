---
import { Image } from "astro:assets";
import image from "../../assets/images/work-image.jpeg";
import claro from "../../assets/images/logos/claro-logo.png";
import { t } from "i18next";
import logos from "../../assets/images/logos/index.js";
const { samsung, nokia, ericsson, cambium } = logos;
---

<section class="section-products">
  <div class="section-container">
    <div class="content-left">
      <h2 class="section-title">{t("site_home.our_products")}</h2>
      <p class="section-text">
        {t("site_home.product_text01")}
      </p>
      <p>
        {t("site_home.product_text02")}
      </p>
      <div class="products-cards section-circles">
        <Image src={samsung} alt="claro logo" />
        <Image src={nokia} alt="claro logo" />
        <Image src={ericsson} alt="claro logo" />
        <Image src={cambium} alt="claro logo" />
      </div>
    </div>
    <div class="content-right">
      <Image src={image} alt="products section image" />
    </div>
  </div>
</section>

<style lang="scss">
  @use "../../assets/scss/base/_breakpoint.scss" as *;
  .section-products {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 40px;
    margin-bottom: 40px;

    > .section-container {
      width: 95%;
      max-width: 1350px;
      display: flex;
      flex-direction: column;
      gap: 20px;
      padding: 0px 20px;

      @include breakpoint(lg) {
        flex-direction: row;
        justify-content: space-evenly;

        > .content-left {
          width: 100%;
        }

        > .content-right {
          width: 45%;
        }
      }

      > .content-left {
        display: flex;
        flex-direction: column;
        gap: 10px;
        text-wrap: balance;
        > h2 {
          margin-bottom: 20px;
        }

        > .products-cards {
          display: grid;
          grid-template-columns: 1fr 1fr 1fr 1fr;
          align-items: center;
          justify-content: center;
          width: 100%;
          max-width: 700px;
          grid-gap: 20px;
          margin-top: 20px;
          gap: 40px;
          padding: 20px 20px;
          background-color: var(--color-light-silver);
          border-radius: var(--radius-default);
          padding: 20px;

          > img {
            width: 100%;
            max-width: 150px;
            height: auto;
          }
        }
      }

      > .content-right {
        display: none;

        > img {
          width: auto;
          height: 100%;
          border-radius: var(--radius-default);
        }

        @include breakpoint(lg) {
          display: block;
        }
      }
    }
  }
</style>
