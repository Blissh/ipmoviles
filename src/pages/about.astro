          <p class="card-description">
            {t("about_us.mission_text04")}
          </p>
        </div>
        <div class="vision-card card-item">
          <h2 class="card-title">
            {t("about_us.vision_title")}
          </h2>
          <p class="card-description">
            {t("about_us.vision_text01")}
            <span class="span">{t("about_us.vision_text02")}</span>
            {t("about_us.vision_text03")}
          </p>
          <p class="card-description">
            {t("about_us.vision_text04")}
          </p>
        </div>
        <div class="values-card card-item">
          <h2 class="card-title">
            {t("about_us.values_title")}
          </h2>

          <p>
            {t("about_us.values01_desktop")}
          </p>
          <p>
            {t("about_us.values02_desktop")}
          </p>
        </div>
      </div>
    </section>
