---
export const prerender = true;
import { changeLanguage, t } from "i18next";
import CardServicesPage from "../../components/CardServicesPage.astro";
import Layout from "../../layouts/Layout.astro";
import { Image } from "astro:assets";
import imageWork from "../../assets/images/about-work.jpg";
import ContactSection from "../../components/Home/ContactSection.astro";

changeLanguage("es");

const services = [
  {
    body: t("our_services.cards.0"),
    icon: "mdi:radio-tower",
  },
  {
    body: t("our_services.cards.1"),
    icon: "mdi:tools",
  },
  {
    body: t("our_services.cards.2"),
    icon: "mdi:map-search-outline",
  },
  {
    body: t("our_services.cards.3"),
    icon: "mdi:form-select",
  },
  {
    body: t("our_services.cards.4"),
    icon: "mdi:file-document",
  },
  {
    body: t("our_services.cards.5"),
    icon: "mdi:hammer",
  },
  {
    body: t("our_services.cards.6"),
    icon: "mdi:recycle",
  },
  {
    body: t("our_services.cards.7"),
    icon: "mdi:cog-outline",
  },
  {
    body: t("our_services.cards.8"),
    icon: "mdi:clipboard-check",
  },
  {
    body: t("our_services.cards.9"),
    icon: "mdi:settings",
  },
  {
    body: t("our_services.cards.10"),
    icon: "mdi:trending-up",
  },
  {
    body: t("our_services.cards.11"),
    icon: "mdi:wrench",
  },
];
---

<Layout title={t("titles.services")}>
  <div class="container">
    <div class="page-title">
      <h1 class="services-title">{t("our_services.our_services_title")}</h1>
      <p class="services-intro">
        {t("our_services.our_services_info")}
      </p>
    </div>
    <section class="cards-container">
      <div class="cards">
        {
          services.map(({ body, icon }, i) => (
            <CardServicesPage text={body} icon={icon} />
          ))
        }
      </div>
    </section>
    <div class="work-container">
      <div class="work">
        <div class="work-content">
          <h2 class="work-title section-title">
            {t("our_services.ready_work")}
          </h2>
          <p class="work-text">
            {t("our_services.readdy_work_text01")}
          </p>
          <ul>
            <li>
              {t("our_services.readdy_work_text02")}
            </li>
            <li>
              {t("our_services.readdy_work_text03")}
            </li>
            <li>
              {t("our_services.readdy_work_text04")}
            </li>
          </ul>
        </div>
        <div class="work-image">
          <Image src={imageWork} alt="work image" />
        </div>
      </div>
    </div>
  </div>
  <ContactSection />
</Layout>

<style lang="scss">
  @use "../../assets/scss/base/_breakpoint.scss" as *;

  .container {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;

    > .page-title {
      display: flex;
      flex-direction: column;
      width: 90%;
      max-width: 1350px;
      gap: 30px;
      margin: 40px 0px;
      > .services-title {
        font-size: 3.6rem;
        font-weight: 700;

        @include breakpoint(md) {
          font-size: 4.8rem;
        }

        @include breakpoint(lg) {
          font-size: 5.6rem;
        }

        @include breakpoint(xl) {
          font-size: 6.4rem;
        }
      }
    }

    > .cards-container {
      display: flex;
      flex-direction: column;
      align-items: center;
      width: 100%;
      margin: 40px 0px;
      > .cards {
        display: grid;
        width: 90%;
        gap: 20px;
        grid-template-columns: 1fr 1fr;
        justify-items: center;
        max-width: 1350px;
        @include breakpoint(md) {
          grid-template-columns: 1fr 1fr 1fr;
        }
        @include breakpoint(lg) {
          grid-template-columns: 1fr 1fr 1fr 1fr;
        }
      }
    }

    > .work-container {
      display: flex;
      flex-direction: column;
      align-items: center;
      width: 100%;
      margin: 40px 0px;
      > .work {
        display: flex;
        flex-direction: column;

        width: 90%;
        gap: 20px;
        max-width: 1350px;
        @include breakpoint(md) {
          flex-direction: row;
        }

        > .work-content {
          display: flex;
          flex-direction: column;
          gap: 20px;
          width: 100%;

          > ul {
            display: flex;
            flex-direction: column;
            gap: 5px;

            > li {
              font-size: 1.4rem;
              font-weight: 300;
              line-height: 1.6;
              @include breakpoint(sm) {
                font-size: 1.6rem;
              }
              @include breakpoint(lg) {
                font-size: 1.8rem;
              }
            }
          }
        }

        > .work-image {
          width: 100%;
          display: flex;
          justify-content: center;
          margin-top: 20px;
          > img {
            width: 100%;
            height: auto;
            object-fit: cover;
            border-radius: var(--radius-default);
          }

          @include breakpoint(md) {
            width: 50%;
          }
        }
      }
    }
  }
</style>
