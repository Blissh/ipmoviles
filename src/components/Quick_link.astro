---
interface Props {
  title: string;
  href: string;
}

const { href, title } = Astro.props;
import "../assets/scss/base/_breakpoint.scss";
---

<li>
  <a href={href}>{title}</a>
</li>

<style lang="scss">
  @use "../assets/scss/base/_breakpoint.scss" as *;
  a {
    text-decoration: underline;
    color: var(--color-mint-cream) !important;
    font-size: 10px;
    @include breakpoint(md) {
      font-size: 18px;
      color: var(--color-mint-cream) !important;
    }
  }
  li {
    font-size: 5px;
    color: var(--color-mint-cream) !important;
    @include breakpoint(md) {
      font-size: 10px;
      color: var(--color-mint-cream) !important;
    }
  }
</style>
