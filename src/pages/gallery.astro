  <style lang="scss">
    @use "../assets/scss/base/_breakpoint.scss" as *;
    .container {
      display: flex;
      flex-direction: column;
      box-sizing: border-box;
      padding: 30px 65px 30px 65px;
      @include breakpoint(md) {
        padding: 30px 190px 30px 190px;
      }

      > .grid-container {
        margin-top: 30px;
        margin-bottom: 30px;
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        grid-gap: 10px;
        max-width: 1350px;

        @include breakpoint(md) {
          grid-template-columns: repeat(3, 1fr);
          max-width: 950px;
        }
      }
    }

    h1 {
      text-align: left;
      font-size: 24px;
      font-weight: 600;
      @include breakpoint(md) {
        font-size: 40px;
      }
    }

    .intro {
      margin-top: 30px;
      font-size: 16px;
      font-weight: 500;
      @include breakpoint(md) {
        font-size: 24px;
      }
    }

    .grid-item-1 {
      grid-row: 1/2;
      @include breakpoint(md) {
        grid-column: 1/2;
        grid-row: 1/2;
      }
    }

    .grid-item-2 {
      grid-row: 1/3;
      @include breakpoint(md) {
        grid-column: 2/3;
        grid-row: 1/2;
      }
    }
    .grid-item-3 {
      grid-row: 2/3;
      @include breakpoint(md) {
        grid-column: 3/4;
        grid-row: 1/2;
      }
    }

    .grid-item-4 {
      grid-column: 1/3;
      @include breakpoint(md) {
        width: 100%;
        grid-column: 1/3;
        grid-row: 2/4;
      }
    }

    .grid-item-5 {
      grid-row: 4/6;
      @include breakpoint(md) {
        grid-row: 2/3;
        grid-column: 3/4;
      }
    }

    .grid-item-6 {
      grid-column: 2/3;
      @include breakpoint(md) {
        grid-row: 3/4;
        grid-column: 3/4;
      }
    }

    .grid-item-7 {
      grid-column: 2/3;
      @include breakpoint(md) {
        grid-column: 1/4;
        width: 100%;
      }
    }

    .grid-container img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transform: scale(1);
      transition: transform 0.3s ease;
      @include breakpoint(md) {
        width: auto;
        height: auto;
      }
    }

    .grid-container img:hover {
      transform: scale(1.05);
    }

    .fin {
      text-align: center;
      font-size: 16px;
      font-weight: 500;
      @include breakpoint(md) {
        font-size: 32px;
      }
    }

    .redes {
      margin-top: 30px;
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 20px;
    }
  </style>
</Layout>
