---
import { changeLanguage, t } from "i18next";
import Layout from "../layouts/Layout.astro";
import CardAboutUsFondo from "../components/CardAboutUsFondo.astro";
import { Image } from "astro:assets";
import mobileImage from "../assets/images/obrero.svg";
import desktopImage from "../assets/images/desktop-image.png";
import Icon from "astro-icon";

changeLanguage("en");
---

<Layout title="About Us">
  <div class="container">
    <div class="page-title">
      <h1 class="about-title">{t("about_us.about_us_title")}</h1>
    </div>

    <section class="about-description">
      <div class="about-description-container">
        <div class="experience">
          <div class="iconXP">
            <Icon name="mdi:star-check" />
          </div>
          <p class="experience-text">
            {t("about_us.text01")}
            <span class="xp">{t("about_us.text02")}</span>
            {t("about_us.text03")}
          </p>
          <p class="experience-text">
            {t("about_us.text04")}
          </p>
        </div>

        <div class="experience">
          <div class="iconXP">
            <Icon name="mdi:medal-outline" />
          </div>

          <p class="experience-text">
            {t("about_us.text05")}<span class="xp">
              {t("about_us.text06")}</span
            >
            {t("about_us.text07")}
          </p>
          <p class="experience-text">
            {t("about_us.text08")}
          </p>
        </div>
      </div>
    </section>
    <div class="desktop-image">
      <Image src={desktopImage} alt="example image" />
    </div>
    <div class="mobile-image">
      <Image src={mobileImage} alt="example image" />
    </div>

    <section class="cards-container">
      <div class="cards">
        <div class="mission-card card-item">
          <h2 class="card-title">
            {t("about_us.mission_tittle")}
          </h2>
          <p class="card-description">
            {t("about_us.mission_text01")}
            <span class="span">{t("about_us.mission_text02")}</span>
            {t("about_us.mission_text03")}
