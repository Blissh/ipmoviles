---
export const prerender = true;
import { changeLanguage, t } from "i18next";
import Layout from "../layouts/Layout.astro";
import gallery from "../assets/images/gallery/index";
import { Image } from "astro:assets";

changeLanguage("en");

const { primera, segunda, tercera, cuarta, quinta, sexta, septima } = gallery;
---

<Layout title={t("titles.gallery")}>
  <section class="container">
    <h1>{t("gallery.gallery_title")}</h1>
    <p class="intro">
      {t("gallery.gallery_text01")}
    </p>
    <div class="grid-container">
      <div class="grid-item-1">
        <Image src={primera} alt="Imagen 1" />
      </div>
      <div class="grid-item-2">
        <Image src={segunda} alt="Imagen 2" />
      </div>
      <div class="grid-item-3">
        <Image src={tercera} alt="Imagen 3" />
      </div>
      <div class="grid-item-4">
        <Image src={quinta} alt="Imagen 5" />
      </div>
      <div class="grid-item-5">
        <Image src={cuarta} alt="Imagen 4" />
      </div>

      <div class="grid-item-6">
        <Image src={sexta} alt="Imagen 6" />
      </div>
      <div class="grid-item-7">
        <Image src={septima} alt="Imagen 7" />
      </div>
    </div>

