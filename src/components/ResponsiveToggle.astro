<button
  class="responsive-toggle"
  aria-label="Toggle menu"
  aria-expanded="false"
>
  <svg width="32" height="32" viewBox="0 0 24 24"
    ><path
      fill="var(--toggle-color)"
      d="M4 18h16c.55 0 1-.45 1-1s-.45-1-1-1H4c-.55 0-1 .45-1 1s.45 1 1 1zm0-5h16c.55 0 1-.45 1-1s-.45-1-1-1H4c-.55 0-1 .45-1 1s.45 1 1 1zM3 7c0 .55.45 1 1 1h16c.55 0 1-.45 1-1s-.45-1-1-1H4c-.55 0-1 .45-1 1z"
    ></path></svg
  >

  <script>
    const responsiveToggle = document.querySelector(".responsive-toggle");

    const openMenu = (toggle) => {
      toggle.setAttribute("aria-expanded", true);
      toggle.setAttribute("aria-label", "Close menu");
      toggle.innerHTML = `<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" 
      viewBox="0 0 24 24"><path fill="var(--toggle-color)" d="M18.3 5.71a.996.996 0 0 0-1.41 0L12 10.59L7.11 5.7A.996.996 0 1 0 5.7 7.11L10.59 12L5.7 16.89a.996.996 0 1 0 1.41 1.41L12 13.41l4.89 4.89a.996.996 0 1 0 1.41-1.41L13.41 12l4.89-4.89c.38-.38.38-1.02 0-1.4z"/></svg>`;
    };

    const closeMenu = (toggle) => {
      toggle.setAttribute("aria-expanded", false);
      toggle.setAttribute("aria-label", "Open menu");
      toggle.innerHTML = `<svg width="32" height="32" viewBox="0 0 24 24"><path
      fill="var(--toggle-color)" d="M4 18h16c.55 0 1-.45 1-1s-.45-1-1-1H4c-.55 0-1 .45-1 1s.45 1 1 1zm0-5h16c.55 0 1-.45 1-1s-.45-1-1-1H4c-.55 0-1 .45-1 1s.45 1 1 1zM3 7c0 .55.45 1 1 1h16c.55 0 1-.45 1-1s-.45-1-1-1H4c-.55 0-1 .45-1 1z"
    ></path></svg
  >`;
    };

    responsiveToggle.addEventListener("click", () => {
      const mobileNavigation = document.querySelector(".mobile-menu");

      mobileNavigation.classList.toggle("show");
      mobileNavigation.classList.contains("show")
        ? openMenu(responsiveToggle)
        : closeMenu(responsiveToggle);
    });
  </script>
</button>
