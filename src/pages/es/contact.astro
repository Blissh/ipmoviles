<style lang="scss">
  @use "../../assets/scss/base/_breakpoint.scss" as *;

  .container {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;

    > .page-title {
      display: flex;
      flex-direction: column;
      width: 90%;
      max-width: 1350px;
      gap: 30px;
      margin: 40px 0px;
      > .contact-title {
        font-size: 3.6rem;
        font-weight: 700;

        @include breakpoint(md) {
          font-size: 4.8rem;
        }

        @include breakpoint(lg) {
          font-size: 5.6rem;
        }

        @include breakpoint(xl) {
          font-size: 6.4rem;
        }
      }
    }

    > .contact-container {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 25px;
      width: 100%;
      margin: 40px 0px;

      > .section-container {
        display: flex;
        flex-direction: column;
        gap: 40px;
        width: 90%;
        max-width: 1350px;

        @include breakpoint(md) {
          flex-direction: row;
          gap: 20px;
        }

        > .form-container {
          display: flex;
          flex-direction: column;
          gap: 25px;
          width: 100%;
          height: 100%;
          @include breakpoint(md) {
            width: 65%;
            height: auto;
            background-color: var(--card-background-color);
            box-sizing: border-box;
            border-radius: var(--radius-default);
            padding: 30px;
            color: var(--color-mint-cream);
          }

          @include breakpoint(lg) {
            width: 70%;
          }

          @include breakpoint(xl) {
            width: 75%;
          }
        }

        > .contact-container {
          display: flex;
          flex-direction: column;
          gap: 10px;
          width: 100%;
          background-color: var(--card-background-color);
          border-radius: var(--radius-default);
          padding: 30px;
          color: var(--color-mint-cream);
          > h2 {
            font-size: 2rem;
          }

          h3 {
            font-size: 1.8rem;
          }

          > .contact-content {
            display: flex;
            flex-direction: column;
            width: 100%;
            p {
              font-size: 1.6rem;
            }
            > a {
              font-size: 1.2rem;
              @include breakpoint(md) {
                font-size: 1.4rem;
              }
            }

            > .icons {
              display: flex;
              gap: 10px;
              [astro-icon] {
                margin-top: 5px;
                width: 40px;
                height: 40px;
                color: var(--action-color);
              }
            }
          }
          @include breakpoint(md) {
            width: 35%;
            background-color: var(--card-background-color);
            box-sizing: border-box;
            border-radius: var(--radius-default);
            padding: 30px;
            color: var(--color-mint-cream);
          }

          @include breakpoint(lg) {
            width: 30%;
          }

          @include breakpoint(xl) {
            width: 25%;
            h2 {
              font-size: 2.2rem;
            }
            h3 {
              font-size: 2rem;
            }
            p {
              font-size: 1.8rem;
            }
          }
        }
      }
    }
  }

  .contact-info {
    display: flex;
    flex-direction: column;
    gap: 20px;
    background-color: var(--card-background-color);
    box-sizing: border-box;
    padding: 30px;
    border-radius: 5px;
    @include breakpoint(md) {
      width: auto;
      height: auto;
    }
  }

  .contact-info h2 {
    font-size: 20px;
    font-style: normal;
    font-weight: 600;
  }

  .phone {
    display: flex;
    flex-direction: column;
    gap: 3px;
    font-size: 16px;
    font-style: normal;
    font-weight: 500;
  }

  .phone p {
    display: flex;
    font-size: 16px;
    font-style: normal;
    font-weight: 500;
  }

  .phone h3 {
    margin-bottom: 4px;
    font-size: 16px;
    font-style: normal;
    font-weight: 700;
  }

  .redes span {
    margin-top: 12px;
    display: flex;
    gap: 15px;
  }

  .desktop {
    display: none;
    box-sizing: border-box;
    margin-top: 30px;
    @include breakpoint(md) {
      margin-top: 0;
      display: flex;
      text-align: center;
      color: var(--action-color);
    }
  }

  .mobile {
    display: flex;
    box-sizing: border-box;
    padding: 14px 0;
    text-align: left;
    margin-top: 30px;
    @include breakpoint(md) {
      display: none;
    }
  }

  iframe {
    width: 100%;
    @include breakpoint(md) {
      width: 510px;
      height: 300px;
    }
  }

  .mapa {
    @include breakpoint(md) {
      display: flex;
      flex-direction: column;
      gap: 20px;
      margin-top: 80px;
      width: 100%;
    }
  }

  .mapa .title {
    display: none;
    @include breakpoint(md) {
      display: flex;
    }
  }

  .mapa div {
    @include breakpoint(md) {
      display: grid;
      grid-template-columns: 1fr 1fr;
      justify-items: center;
      grid-gap: 20px;
    }
  }

  .mapa span {
    @include breakpoint(md) {
      display: flex;
      flex-direction: column;
      font-size: 20px;
      align-items: center;
      gap: 20px;
    }
  }

  .mapa span p {
    @include breakpoint(md) {
      font-size: 20px;
    }
  }
</style>
